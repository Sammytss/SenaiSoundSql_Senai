@page "/MostrarArtistas"
@inject ArtistaAPI artistaAPI
<PageTitle>Mostrar Artistas</PageTitle>

<MudText Typo="Typo.h3" Align="Align.Center">Mostrar Artistas</MudText>
@if (artistas is not null)
{
	<MudGrid Justify="Justify.Center">
		@foreach (var artista in artistas)
		{
			<MudItem>
				<MudPaper Height="140px" Width="140px">
					@artista.Nome
					<MudImage Src="@artista.FotoPerfil" Fluid=" true " Class=" rounded-lg " />
				</MudPaper>
			</MudItem>
		}
	</MudGrid>
}



@code {
	private ICollection<ArtistaResponse>? artistas;
	protected override async Task OnInitializedAsync()
	{
		artistas = await artistaAPI.GetArtistasAsync();
	}
}
